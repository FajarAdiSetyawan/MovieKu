<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@color/bg_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_all_cast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/cast_all"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/layout_cast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_all_cast"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_all_cast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_cast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include layout="@layout/include_loading_all_cast_crew" />
                    <include layout="@layout/include_loading_all_cast_crew" />
                    <include layout="@layout/include_loading_all_cast_crew" />
                    <include layout="@layout/include_loading_all_cast_crew" />
                    <include layout="@layout/include_loading_all_cast_crew" />
                    <include layout="@layout/include_loading_all_cast_crew" />
                    <include layout="@layout/include_loading_all_cast_crew" />

                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <TextView
                android:id="@+id/tv_cast_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_for_cast_empty"
                android:textAlignment="center"
                android:gravity="center"
                android:fontFamily="@font/worksans"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/failed_load_cast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_failed_cast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/data_failed_to_load"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="16sp"
                    tools:visibility="visible" />


                <Button
                    android:id="@+id/btn_try_again_cast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/try_again"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    tools:visibility="visible" />
            </LinearLayout>
        </RelativeLayout>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_cast"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_all_crew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/crew_all"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <RelativeLayout
            android:id="@+id/layout_crew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_all_crew"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_all_crew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_crew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include layout="@layout/include_loading_all_cast_crew" />
                    <include layout="@layout/include_loading_all_cast_crew" />
                    <include layout="@layout/include_loading_all_cast_crew" />
                    <include layout="@layout/include_loading_all_cast_crew" />
                    <include layout="@layout/include_loading_all_cast_crew" />
                    <include layout="@layout/include_loading_all_cast_crew" />
                    <include layout="@layout/include_loading_all_cast_crew" />

                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <TextView
                android:id="@+id/tv_crew_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_for_crew_empty"
                android:textAlignment="center"
                android:gravity="center"
                android:fontFamily="@font/worksans"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/failed_load_crew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_failed_crew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/data_failed_to_load"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="16sp"
                    tools:visibility="visible" />


                <Button
                    android:id="@+id/btn_try_again_crew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/try_again"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    tools:visibility="visible" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>